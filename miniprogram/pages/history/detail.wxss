/* miniprogram/pages/history/detail.wxss */
.video-area {
  display: flex;
  flex-direction: column;
  padding: 10px;
  background-color: white;
  border-radius: 2%;
  align-items: center;
}

.video-area .save-btn-area {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 10px;
}

.video-area video {
  width: 100%;
  height: 200px;
}

.video-area .copy-btn-area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 10px;
  padding-bottom: 10px;
}